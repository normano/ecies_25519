{
  "name": "@excsn/ecies_25519",
  "description": "Elliptic Curve Integrated Encryption Scheme using x25519",
  "version": "0.1.7",
  "author": "Norm O <normo.pub@gmail.com>",
  "license": "MPL-2.0",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs"
    },
    "./utils": {
      "require": "./dist/cjs/utils.cjs",
      "import": "./dist/esm/utils.mjs"
    }
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "APP_ENV=test ava --tap",
    "test:cov": "nyc -r cobertura -r html -r text yarn test",
    "build": "sh ./scripts/build.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/normano/ecies_25519.git"
  },
  "dependencies": {
    "@excsn/asn1": "1.0.0",
    "@stablelib/x25519": "^1.0.2",
    "fast-sha256": "^1.3.0",
    "fs-extra": "^10.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.0",
    "ava": "^4.3.3",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "mts": "module",
      "cts": "commonjs"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ],
    "failFast": true,
    "tap": true,
    "files": [
      "test/**/*",
      "!test/src/**"
    ]
  }
}
